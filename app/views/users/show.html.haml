%p#notice= notice

%h2.center-text= @user.name

= @user.user_image

%p
  %b Dob:
  = @user.dob

%p
  %b Address:
  = @user.address

%p
  %b Balance:
  = number_to_currency @user.balance

- if can? :manage, :all
  %p
    %b Role:
    = @user.role

- if @courses && @courses.count > 0
  - @courses.each do |x|
    = render 'courses/schedule', schedules: x.schedules, title: x.name
    %br
    %br

= link_to 'Edit', edit_user_path(@user), class:'button'
= link_to 'Back', users_path, class:'button'

